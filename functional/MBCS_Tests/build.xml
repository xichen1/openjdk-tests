<project name="MBCS_Tests" default="build" basedir=".">
	<taskdef resource="net/sf/antcontrib/antlib.xml" />
	<description>
		Build MBCS_Tests
	</description>
	<import file="${TEST_ROOT}/functional/build.xml"/>

	<!-- set properties for this build -->
	<property name="DEST" value="${BUILD_ROOT}/functional/MBCS_Tests" />

	<target name="init">
		<mkdir dir="${DEST}" />
	</target>

	<target name="build" depends="dist">
		<if>
			<equals arg1="${JCL_VERSION}" arg2="latest" />
			<then>
				<subant target="">
					<fileset dir="." includes="*/build.xml">
						<exclude name="proxyFieldAccess/build.xml" />
					</fileset>
				</subant>
			</then>
			<else>
				<subant target="">
					<fileset dir="." includes="*/build.xml" />
				</subant>
			</else>
		</if>
	</target>
	
	<target name="dist" depends="init,dist_functional">
		<copy todir="${DEST}">
			<fileset dir="." includes="*.mk"/>
		</copy>
		<copy todir="${DEST}/data">
			<fileset dir="./data/" includes="*"/>
		</copy>
	</target>
</project>
